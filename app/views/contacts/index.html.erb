<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Age</th>
      <th>Uf</th>
      <th>Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.age %></td>
        <td><%= contact.uf %></td>
        <td><%= contact.job %></td>
        <td><%= link_to 'Show', contact, class:'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class:'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path, class:'btn btn-success' %>
