<p id="notice"><%= notice %></p>

<h1>Listing Segments</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Criterium</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @segments.each do |segment| %>
      <tr>
        <td><%= segment.name %></td>
        <td>List of criteria</td>
        <td><%= link_to 'Show', segment, class:'btn btn-info' %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

